@page "/obdelnik2"

<PageTitle>Obdélník</PageTitle>

<h1>Obdelnik</h1>

<label>
    Zadej stranu A:
    <input type="number" @bind-value="obdelnik.StranaA" />
</label>

<label>
    Zadej stranu B:
    <input type="number" @bind-value="obdelnik.StranaB" />
</label>
<br />
<label>
    Obvod:
    <input type="number" value="@obdelnik.Obvod" readonly />
</label>
<label>
    Obsah:
    <input type="number" value="@obdelnik.Obsah" readonly />
</label>
<label>
    Úhlopříčka:
    <input value="@obdelnik.Uhlopricka" readonly />
</label>

@code {
    private Model.Obdelnik2 obdelnik = new Model.Obdelnik2();
}

