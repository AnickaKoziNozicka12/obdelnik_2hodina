@page "/obdelnik"

<PageTitle>Obdélník</PageTitle>

<h1>Obdelnik</h1>

<label>
    Zadej stranu A: 
    <input type="number" @bind-value="obdelnik.StranaA" />
</label>

<label>
    Zadej stranu B:
    <input type="number" @bind-value="obdelnik.StranaB" />
</label>
<br />
<label>
    Obvod:
    <input type="number" @bind-value="obdelnik.SpoctiObvod" readonly />
</label>
<label>
    Obsah:
    <input type="number" @bind-value="obdelnik.SpoctiObsah" readonly />
</label>

<button @onclick="obdelnik.Vypocet">Spočti</button>

@code {
    private obdelnik_2hodina.Model.Obdelnik obdelnik = new Model.Obdelnik();

}
